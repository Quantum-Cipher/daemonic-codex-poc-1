{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/daemonStatus",
        "function": "daemonStatus"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/**",
        "headers": [
          { 
            "key": "Content-Security-Policy", 
            "value": "default-src 'self' 'unsafe-inline' https://*.googleapis.com; img-src 'self' data:;" 
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "functions"
  }
}
